server {
    listen 80 default_server;
    listen  [::]:80 default_server;
    server_name _ zaphodsfix.com www.zaphodsfix.com;

    # Docker DNS (prevents stale upstream IPs after container restarts)
    resolver 127.0.0.11 valid=10s ipv6=off;

    # If we're behind Cloudflare, it will usually send X-Forwarded-Proto: https.
    # Prefer that value so Django can correctly treat requests as secure.
    set $proxy_forwarded_proto $scheme;
    if ($http_x_forwarded_proto != "") {
        set $proxy_forwarded_proto $http_x_forwarded_proto;
    }

    # Frontend - default route
    location / {
        set $frontend_upstream frontend:80;
        proxy_pass http://$frontend_upstream;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $proxy_forwarded_proto;

        # WebSocket support (Vite HMR in dev; harmless in prod)
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
    }

    # Django static files (admin CSS/JS, etc.)
    location /static/ {
        set $backend_upstream backend:8000;
        proxy_pass http://$backend_upstream;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $proxy_forwarded_proto;
    }

    # Backend API
    location /api/ {
        set $backend_upstream backend:8000;
        proxy_pass http://$backend_upstream;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $proxy_forwarded_proto;
    }

    # Backend admin
    location /admin/ {
        set $backend_upstream backend:8000;
        proxy_pass http://$backend_upstream;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $proxy_forwarded_proto;
    }

    # Logger (Dozzle)
    location /logs/ {
        set $dozzle_upstream dozzle:8080;
        proxy_pass http://$dozzle_upstream;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $proxy_forwarded_proto;
        
        # WebSocket support for Dozzle
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
    }
}
